<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/on_secondary</item>
        <item name="boxStrokeErrorColor">@color/on_secondary</item>
        <item name="boxStrokeWidth">32dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="errorIconTint">@color/on_secondary</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColorHint">@color/on_secondary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
</resources>